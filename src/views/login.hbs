<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default panel-login">
                <div class="panel-heading">MEMBERS AREA</div>
                <div class="panel-body">
                    {{#if error}}
                    <div class="alert alert-danger">
                        <p>{{error}}</p>
                    </div>
                    {{/if}}
                    <form action="/login" id="login-form" method="post" accept-charset="utf-8">
                        <div class="form-group">
                            <label for="username" class="control-label">Username</label>
                            <input required="required" id="username" name="username" type="text" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label">Password</label>
                            <input required="required" id="password" name="password" type="password" class="form-control"/>
                        </div>
                        <div class="form-button">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>